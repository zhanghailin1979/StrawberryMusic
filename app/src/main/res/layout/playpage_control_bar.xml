<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@null"
              android:gravity="center"
              android:padding="10dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_play_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/button_playmode_order_bg"/>
    <ImageView
        android:id="@+id/imageView_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:background="@drawable/button_prev_bg"/>
    <ImageView
        android:id="@+id/imageView_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/button_play_bg"/>
    <ImageView
        android:id="@+id/imageView_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:clickable="true"
        android:src="@drawable/button_next_bg"/>
    <ImageView
        android:id="@+id/imageView_play_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/button_list_bg"/>

</LinearLayout>