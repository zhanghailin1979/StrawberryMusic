<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PlayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/windowStatusColor</item>
        <item name="colorPrimaryDark">@color/windowStatusColor</item>
        <item name="colorAccent">@color/windowStatusColor</item>
    </style>

    <style name="mySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:indeterminate">false</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">1dip</item>　　
        <item name="android:maxHeight">1dip</item>
        　<item name="android:thumbOffset">5dip</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:thumb">@mipmap/bt_progress_nor</item>
    </style>

</resources>
